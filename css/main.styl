@import 'nib'
global-reset()

//basic body
body
    font-size 20px
    margin 0 auto
    background-color #eee
    max-width 720px
    font-family "ff-tisa-sans-web-pro", sans-serif

ppp-header
    display block
    margin-top 1rem
    font-family "grafolita-script", sans-serif
    h1
        font-size 2rem
        margin-left 6.5rem
    ul
        margin-top 1rem
    li
        list-style none
        display inline-block
        margin-right 1.5rem
        font-size 1.25rem
    .img-wrapper
        float left
        position relative
        display block
        height 4rem
        width 4rem
        img 
            display block
            height 100%
            opacity .55
ppp-nav
    display block
    clear both
    li
        margin-top 1rem
a
    color black
    text-decoration none
    &:hover
        text-decoration underline
main
    h1
        margin-top 1rem
        font-size 1.75rem
        font-weight 800
    h2
        margin-top 1rem
        font-size 1.5rem
        font-weight 600
    p
        margin-top 1rem
        width 35rem
        line-height 1.5rem
        font-size 1.25rem
    ul
        margin-left 1rem
        margin-top 1.5rem
    ul.dotted
        list-style disc
        margin-left 2rem
    li
        line-height 1.5rem
    strong
        font-weight 800